@model EMS.Models.Project
@{
ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.ProjectName</h4>
        <h6 class="card-subtitle mb-2 text-muted">Project ID: @Model.ProjectId</h6>
        <pre class="card-text">@Html.Raw(Model.ProjectDescription)</pre>
        <hr>
        <h5 class="card-subtitle mb-2">Team Members</h5>
        @if (Model.Employees != null && Model.Employees.Count > 0)
        {
            <ul>
                @foreach (var employee in Model.Employees)
                {
                    <li>@employee.EmployeeName</li>
                }
            </ul>
        }
        else
        {
            <p>No team members assigned.</p>
        }
        <hr>
        <p class="card-text">Created at: @Model.CreatedAt</p>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>