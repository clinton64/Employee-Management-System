@model Project

@{
    ViewData["Title"] = "Create";
}


<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Project</h2><hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="ProjectName"></label>
            <input asp-for="ProjectName" class="form-control"/>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProjectDescription"></label>
            <input asp-for="ProjectDescription" class="form-control"/>
            <span asp-validation-for="ProjectDescription" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Project" asp-action="Index" class="btn btn-secondary" style="width:150px">

            Back to List

        </a>

        

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}