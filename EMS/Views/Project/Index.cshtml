@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Project>




<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Project List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Project" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New Project
        </a>
    </div>

</div>

<table class="table table-bordered table-striped" style="width:100%">

    <thead>

        <tr>
            <th>
                Project Name
            </th>

            <th>
                Project Description
            </th>

        </tr>

    </thead>

    <tbody>

        @foreach(var project in Model)
        {
            <tr>
                <td width="50%">
                    @project.ProjectName
                </td>

                    <td width="50%">
                    @project.ProjectDescription
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Project" asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Details</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Project" asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>

            </tr>

        }

    </tbody>

</table>
