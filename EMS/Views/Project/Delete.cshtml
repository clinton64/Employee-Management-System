@model EMS.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePOST">
    <input asp-for="ProjectId" hidden/>

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Project</h2><hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="ProjectName"></label>
            <input asp-for="ProjectName" disabled class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="ProjectDescription"></label>
            <input asp-for="ProjectDescription" disabled class="form-control"/>
        </div>


        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Project" asp-action="Index" class="btn btn-secondary" style="width:150px">

            Back to List

        </a>

        

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}