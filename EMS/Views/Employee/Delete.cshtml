@model EMS.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Employee Name
        </dt>
        <dd class="col-sm-10">
            @Model.EmployeeName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.EmployeeEmail
        </dd>
        <dt class="col-sm-2">
            Job Title
        </dt>
        <dd class="col-sm-10">
            @Model.JobTitle
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Blood Group
        </dt>
        <dd class="col-sm-10">
            @Model.BloodGroup
        </dd>
        <dt class="col-sm-2">
            Project
        </dt>
        <dd class="col-sm-10">
            @(Model.Project != null ? Model.Project.ProjectName : "No Project Assigned")
        </dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')"/>
            <a asp-action="ShowEmployeeList" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
