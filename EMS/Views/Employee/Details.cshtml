@model EMS.Models.Employee
@{
    ViewData["Title"] = "Details";
}
<h1>Employee Details</h1>

<div class="employee-details">
    <table class="table">
        <tr>
            <th>Id</th>
            <td>@Html.DisplayFor(model => model.Id)</td>
        </tr>
        <tr>
            <th>User Name</th>
            <td>@Html.DisplayFor(model => model.UserName)</td>
        </tr>
        <tr>
            <th> Image </th>
            <td>
                <div style="width:200px; height:200px; overflow:clip;">
                    @if (Model.Image != null && Model.Image.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" style="width: 100%; height: 100%; object-fit: cover;" />
                    }
                </div>
            </td>
        </tr>
        <tr>
            <th>Blood Group</th>
            <td>@Html.DisplayFor(model => model.BloodGroup)</td>
        </tr>
        <tr>
            <th>Job Post</th>
            <td>@Html.DisplayFor(model => model.JobPost)</td>
        </tr>
        <tr>
            <th>Project Name</th>
            <td>@Html.DisplayFor(model => model.Project.ProjectName)</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
        </tr>
        <tr>
            <th>Salary</th>
            <td>@Html.DisplayFor(model => model.Salary)</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Html.DisplayFor(model => model.Address)</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>@Html.DisplayFor(model => model.CreatedAt)</td>
        </tr>
        <tr>
            <th>Created By</th>
            <td>@Html.DisplayFor(model => model.CreatedBy)</td>
        </tr>
    </table>

</div>

    
<div>
    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    &nbsp;
    <a asp-action="Index">Back to List</a>
    &nbsp;
    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id"> Delete Employee </a>
</div>
